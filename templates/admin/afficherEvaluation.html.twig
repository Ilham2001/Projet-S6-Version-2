{% extends 'layouts/adminLayout.html.twig' %}
{% block title %}{{ evaluation.nomEvaluation }}{% endblock %}
{% block body %}
    <div>
        <h2 class="titre">{{ evaluation.nomEvaluation }}</h2>

        <table class="tableau_de_resultats tableau_utilisateurs">
           <tr>
                <th>Question</th>
                <th>Propositions</th>
                <th>Réponses</th>
            </tr>
            {% for question in evaluation.questions %}
                <tr>
                    <th>{{ question.contenuQuestion }}</th>
                    <th>
                        {% for proposition in question.propositionsQuestion %}
                            <div id="proposition">
                                <i id="propo_icon" class="fas fa-chevron-circle-right"></i>{{ proposition }}
                            </div>
                        {% endfor %}
                    </th>
                     <th>
                        {% for reponse in question.reponsesQuestion %}
                            <div id="proposition"><i id="propo_icon" class="fas fa-chevron-circle-right"></i>{{ reponse }}</div>
                        {% endfor %}
                    </th>
                </tr>
                {% else %}
                <tr>
                    <th colspan="2"><center>Aucun résultat</center></th>
                </tr>
                {% endfor %}
        </table>
         <a href="{{ path('admin_generer_fichier', {'id' : evaluation.id }) }}" id="button_generer" class="button_admin generer_eval">Télécharger</a>
    </div>
{% endblock %}