{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/connexion.css">
{% endblock %}

{% block body %}
<form method="post" id="form_connexion">
   

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se deconnecter</a>
        </div>
    {% endif %}
    <div class="connexion">
        <h1 class="conn">Connexion</h1>
         {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="zone_text">
            <i class="fas fa-user"></i>
            <input type="text" value="{{ last_username }}" name="login" id="inputLogin" placeholder="Nom d'utilisateur" class="form-control" required autofocus>
        </div>
        <div class="zone_text">
            <i class="fas fa-lock"></i>
            <input type="password" name="password" id="inputPassword" placeholder="Mot de passe" class="form-control" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-lg btn-primary" type="submit">Se connecter</button>
    </div>
</form>
{% endblock %}
